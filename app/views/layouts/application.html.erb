<!DOCTYPE html>
<html>
  <head>
    <title>Kakunin05</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <% if manager_signed_in? %>
      <div class="nav__right">
          <%= link_to current_manager.email, "#", class: "manager-email"  %> 
          <%= link_to "ログアウト", destroy_manager_session_path, method: :delete, class: :nav__logout %>
          <%#= link_to "新規予約", new_calendar_path, class: :nav__btn %>
          <%= link_to "新規班作成", new_team_path, class: :nav__btn %>
          <%= link_to "トップページ", root_path, class: :nav__btn %>
        </div> 
        <% else %>
        <div class="nav__right">
        <%= link_to "ログイン", new_manager_session_path, class: :nav__btn %>
        <%= link_to "新規登録", new_manager_registration_path, class: :nav__btn %>
        </div>
      <% end %>
      <% if user_signed_in? %>
      <div class="nav__right">
          <%= link_to current_user.email, "#", class: "user-email"  %> 
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
          <%#= link_to "新規予約", new_calendar_path, class: :nav__btn %>
          <%= link_to "新規班作成", new_team_path, class: :nav__btn %>
          <%= link_to "トップページ", root_path, class: :nav__btn %>
        </div> 
        <% else %>
        <div class="nav__right">
        <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
        <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
